{
  "workspace": [
    "./packages/client/**/*",
    "./packages/shared/**/*"
  ],
  "nodeModulesDir": "auto",
  "tasks": {
    "build:evm": "deno task -f @safe-solver/evm-contracts build:mod",
    "build:midnight": "deno task -r compact",
    "dev": "deno task -f @safe-solver/node dev",
    "testnet": "deno task -f @safe-solver/node testnet",
    "check": "deno task -f @safe-solver/node check"
  },
  "imports": {
    "@paimaexample/tui": "jsr:@paimaexample/tui@0.6.1",
    "@paimaexample/midnight-contracts": "jsr:@paimaexample/midnight-contracts@0.6.1",
    "@paimaexample/evm-contracts": "jsr:@paimaexample/evm-contracts@0.6.1",
    "@std/path": "jsr:@std/path@^1.1.3"
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-this-alias",
        "require-yield",
        "no-explicit-any",
        "ban-types",
        "no-unused-vars",
        "no-slow-types"
      ]
    }
  }
}